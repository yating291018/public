.home-page {
  font-size: 12px;
}
.swiperContainer {
  position: relative;
}
.swiperwrapper {
  height: 500rpx;
}
.swiperwrapper .slide-image {
  width: 100%;
  height: 100%;
}
.indicatorContainer {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: center;
}
.indicatorItem {
  color: #fff;
  font-size: 24rpx;
  width: 50rpx;
  height: 50rpx;
  background: #ccc;
  margin: 0 10rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 10rpx;
}
.indicatorItemSelect {
  background: #24519F;
}
.home-position {
  display: flex;
  font-size: 12px;
  padding: 20rpx;
  color: #B6B6B6;
}
.currentposition {
  padding: 5rpx 0;
}
.address {
  color: #24519F;
}
.home-position view{
  margin: 0 10px;
  border: 1px solid #24519F;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}
.positionicon icon {
  vertical-align: middle;
}
.positionicon text {
  vertical-align: middle;
}
.weather {
  padding: 20rpx;
}
.weatherContainer {
  padding: 20rpx;
  background-color: #ccc;
}
.weather-title {
  padding-top: 20rpx;
  border-bottom: 1px solid #24519F;
}
.weadeg {
  font-size: 50rpx;
  color: #24519F;
  text-align: center;
  margin: 20rpx auto;
}
.weatheritem {
  display: flex;
  justify-content: space-around;
}
.weather-jian {
  margin-top: 20rpx;
  text-indent: 10rpx;
}
.moviecontainer {
  padding: 20rpx;
}
.movietitle {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.movietitle .more {
  color: #24519F;
}
.scrollwrapper {
  display: flex;
  white-space: nowrap;
}
.movieitem{
  width: 200rpx;
  height: 240rpx;
  display: inline-block;
  margin-right: 40rpx;
}
.movieitem image {
  width: 100%;
  height: 100%;
}

